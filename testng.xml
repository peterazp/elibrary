<build>
	<plugins>
		<plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-compiler-plugin</artifactId>
		<configuration>
		<source>1.8</source>
		<target>1.8</target>
		</configuration>
	</plugin>
		<plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-surefire-plugin</artifactId>
		<version>2.20</version>
		<configuration>
		<suiteXmlFiles>
		<suiteXmlFile>TestNG.xml</suiteXmlFile>
		</suiteXmlFiles>
		</configuration>
		</plugin>
	</plugins>
</build>